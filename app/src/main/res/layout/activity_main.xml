<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/statusField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:gravity="center"
            android:text="Main Menu" />

        <Button
            android:id="@+id/viewDonationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Donation Feed"
            android:gravity="center"
            android:onClick="onDonationFeedClick"/>

        <Button
            android:id="@+id/viewReceivedDonationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Received Donations"
            android:gravity="center"
            android:onClick="onReceivedDonationClick"/>

        <Button
            android:id="@+id/viewMyDonationListingsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Donation Listings"
            android:gravity="center"
            android:onClick="onMyDonationClick"/>

        <Button
            android:id="@+id/createDonationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Donation"
            android:gravity="center"
            android:onClick="onCreateDonationClick"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click Me!"
            android:gravity="center"
            android:onClick="onConnectButtonClick"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>